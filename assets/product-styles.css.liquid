table.shop_attributes th {
  width: 150px;
  font-size: 16px;
  font-weight: 700;
  padding: 8px;
  border-top: 0;
  border-bottom: 1px dotted rgba(0,0,0,.1);
  margin: 0;
  line-height: 1.5;
  border-right:none;
}
table.shop_attributes td {
    font-style: italic;
    font-size: 16px;
    padding: 0;
    border-top: 0;
    border-bottom: 1px dotted rgba(0,0,0,.1);
    margin: 0;
    line-height: 1.5;
    border-left:none;
}

.form-submit input {
  left: auto;
  font-family: "Montserrat", sans-serif !important;
  font-size: 16px !important;
  font-weight: 500 !important;
  padding: 15px 30px !important;
  background-color: #97bd61;
  color: white;
}
