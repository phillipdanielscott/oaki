<div class="widget widget-recent-articles" style="margin-top:25px;">
  <div>
 	 <h3 class="block-title">{{'blog.widget_blog_title' | t }}</h3>
  </div>
  <div class="widget-content">
    <ul>
    {% for article in blog.articles limit:10 %}
      <li class="article">
        <p><a href="{{ article.url }}">{{ article.title }}</a> <em> {{ article.published_at | date: "%B %d, %Y" }}</em></p>
      </li>
    {% endfor %}
    </ul>
  </div>
</div>
